
.navbar.navbar-fixed-top.scheduling-header
	.navbar-inner
		.container
			a(href='/home', class='brand') Scheduler
			ul.nav
				li.nav-btn.dropdown
					a.dropdown-toggle(href='/schedule', data-toggle="dropdown", data-placement="bottom", title="Schedule classes")
						i.icon-edit
					ul.dropdown-menu.schedule-dropdown(role="menu", aria-labelledby="dropdownMenu")
						h6 Scheduling
						li
							a(tabindex="-1", href="/schedule/create") 
								i.icon-pencil
								| Create schedule
						li
							a(tabindex="-1", href="/user/#{currUser}/schedules") 
								i.icon-list
								| View schedules
						li
							a(tabindex="-1", href="/courses/search") 
								i.icon-search
								| Advanced search

			- if(searchOn === true)
				.divider-vertical.pull-left
				form#course-search.navbar-search.pull-left
					input#search-textfield(type="text", placeholder="Search for classes...", autocomplete="off")
					ul#search-results.dropdown-menu.typeahead.search-dropdown
						li#quick-search-header 
							strong Start typing...
					a#adv-btn.input-btn(href="/courses/search", data-toggle="tooltip", data-placement="bottom", title="Advanced search")
						i.icon-cog

			.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
				i.icon-reorder

			.nav-collapse.collapse
				ul.nav.pull-right
					li.dropdown
						a.dropdown-toggle(data-toggle="dropdown", href="#") #{currUser} 
							b.caret
						ul.dropdown-menu(role="menu", aria-labelledby="dropdownMenu")
							li
								a(tabindex="-1", href="/user/#{currUser}") 
									i.icon-home
									| Profile
								a(tabindex="-1", href="/user/#{currUser}/schedules") 
									i.icon-cog
									| Settings
								a(tabindex="-1", href="/logout") 
									i.icon-signout
									| Logout