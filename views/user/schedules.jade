extends ../layouts/signedin-layout

block content
	.container
		.row
			.span3
				ul.nav.nav-list
					li.nav-header #{userName}
					li 
						a(href="/user/#{userName}") 
							i.icon-home
							| Profile
							i.icon-chevron-right.pull-right
					li.active
						a(href="/user/#{userName}/schedules") 
							i.icon-calendar
							| Schedules
							i.icon-chevron-right.pull-right

			.span9
				h3 Schedules
				#schedule-list-container.row-fluid(data-user="#{userName}")